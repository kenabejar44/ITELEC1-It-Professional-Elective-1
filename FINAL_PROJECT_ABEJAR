-----------------
MainActivity.java 
-----------------
package com.example.myapplication;

import android.app.ActivityManager;
import android.app.NotificationChannel;
import android.app.NotificationManager;
import android.app.PendingIntent;
import android.content.Context;
import android.content.Intent;
import android.os.Build;
import android.os.Bundle;
import android.graphics.Color;
import android.os.Handler;
import android.os.Looper;
import android.widget.ImageButton;
import android.widget.ImageView;
import android.widget.LinearLayout;
import android.widget.TextView;
import androidx.activity.EdgeToEdge;
import androidx.annotation.NonNull;
import androidx.appcompat.app.AppCompatActivity;
import androidx.cardview.widget.CardView;
import androidx.core.app.NotificationCompat;
import androidx.core.app.NotificationManagerCompat;
import androidx.core.content.ContextCompat;
import androidx.core.graphics.Insets;
import androidx.core.view.ViewCompat;
import androidx.core.view.WindowInsetsCompat;
import com.mikhaellopez.circularprogressbar.CircularProgressBar;
import android.Manifest;
import android.content.pm.PackageManager;
import android.widget.Toast;
import androidx.core.app.ActivityCompat;
import androidx.core.content.ContextCompat;
import java.util.List;
import com.google.firebase.database.DataSnapshot;
import com.google.firebase.database.DatabaseError;
import com.google.firebase.database.DatabaseReference;
import com.google.firebase.database.FirebaseDatabase;
import com.google.firebase.database.ValueEventListener;
import androidx.core.splashscreen.SplashScreen;


public class MainActivity extends AppCompatActivity {
    private CardView circleGreen, circleYellow, circleOrange, circleRed;
    private CircularProgressBar circularProgressBar;
    private TextView tvWaterLevel;
    private static final int REQUEST_NOTIFICATION_PERMISSION = 1;
    private boolean moderateFloodNotified = false;
    private boolean highFloodNotified = false;
    private boolean midFloodNotified = false;
    private boolean lowFloodNotified = true;
    DatabaseReference databaseReference;
    ImageView btnMenu;
    ImageButton btnWhistle, btnChecklist, btnCleanup;

    LinearLayout sideMenu;
    boolean isMenuOpen = false;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        setTheme(R.style.Theme_MyApplication);
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_main);
        CircularProgressBar circularProgressBar = findViewById(R.id.circularProgressBar);
        TextView tvWaterLevel = findViewById(R.id.tvWaterLevel);
        circleGreen = findViewById(R.id.circleGreen);
        circleYellow = findViewById(R.id.circleYellow);
        circleOrange = findViewById(R.id.circleOrange);
        circleRed = findViewById(R.id.circleRed);
        TextView tvStatusMessage = findViewById(R.id.tvStatusMessage);
        btnMenu= findViewById(R.id.btnMenu);
        sideMenu = findViewById(R.id.sideMenu);


        databaseReference = FirebaseDatabase.getInstance().getReference("floodData/waterLevel");
        databaseReference.addValueEventListener(new ValueEventListener() {
            @Override
            public void onDataChange(@NonNull DataSnapshot snapshot) {
                if (snapshot.exists()) {
                    float waterLevel = snapshot.getValue(Float.class);

                    tvWaterLevel.setText(waterLevel + " CM");
                    circularProgressBar.setProgressWithAnimation(waterLevel, 1500L);


                    circleGreen.setCardBackgroundColor(Color.GRAY);
                    circleYellow.setCardBackgroundColor(Color.GRAY);
                    circleOrange.setCardBackgroundColor(Color.GRAY);
                    circleRed.setCardBackgroundColor(Color.GRAY);

                    if (waterLevel == 0) {
                        tvStatusMessage.setText("NO flood detected. Area is safe");
                        tvStatusMessage.setTextColor(Color.BLUE);
                    } else if (waterLevel < 50) {
                        circularProgressBar.setProgressBarColor(Color.GREEN);
                        circleGreen.setCardBackgroundColor(getResources().getColor(android.R.color.holo_green_light));
                        tvWaterLevel.setTextColor(Color.GREEN);
                        tvStatusMessage.setText("NORMAL OPERATION: LOW Flood Detected. Stay safe.");
                        tvStatusMessage.setTextColor(Color.GREEN);
                        showFloodNotification("NORMAL OPERATION: LOW Flood Detected.", "Stay safe.", Color.GREEN);
                        lowFloodNotified = true;
                    } else if (waterLevel < 100) {
                        circularProgressBar.setProgressBarColor(Color.YELLOW);
                        circleYellow.setCardBackgroundColor(getResources().getColor(android.R.color.holo_orange_light));
                        tvWaterLevel.setTextColor(Color.YELLOW);
                        tvStatusMessage.setText("AWARENESS: Water Level is starting to rise. Stay alert!");
                        tvStatusMessage.setTextColor(Color.YELLOW);
                        showFloodNotification("AWARENESS: Water Level Rising", "Stay alert!", Color.YELLOW);
                        moderateFloodNotified = true;
                    } else if (waterLevel < 150) {
                        circularProgressBar.setProgressBarColor(getResources().getColor(android.R.color.holo_orange_dark));
                        circleOrange.setCardBackgroundColor(getResources().getColor(android.R.color.holo_orange_dark));
                        tvWaterLevel.setTextColor(getResources().getColor(android.R.color.holo_orange_dark));
                        tvStatusMessage.setText("PREPAREDNESS: Flood is rising. Prepare for possible evacuation.");
                        tvStatusMessage.setTextColor(getResources().getColor(android.R.color.holo_orange_dark));
                        showFloodNotification("PREPAREDNESS: Flood Rising", "Prepare for evacuation.", getResources().getColor(android.R.color.holo_orange_dark));
                        midFloodNotified = true;
                    } else {
                        circularProgressBar.setProgressBarColor(Color.RED);
                        circleRed.setCardBackgroundColor(getResources().getColor(android.R.color.holo_red_light));
                        tvWaterLevel.setTextColor(Color.RED);
                        tvStatusMessage.setText("RESPONSE: SEVERE Flood detected! Evacuate immediately!");
                        tvStatusMessage.setTextColor(Color.RED);
                        showFloodNotification("RESPONSE: SEVERE Flood detected!", "Evacuate immediately!", Color.RED);
                        highFloodNotified = true;
                    }
                }
            }
            @Override
            public void onCancelled(@NonNull DatabaseError error) {
                tvWaterLevel.setText("Error: " + error.getMessage());
            }
        });

    ViewCompat.setOnApplyWindowInsetsListener(findViewById(R.id.main), (v, insets) -> {
            Insets systemBars = insets.getInsets(WindowInsetsCompat.Type.systemBars());
            v.setPadding(systemBars.left, systemBars.top, systemBars.right, systemBars.bottom);
            return insets;
    });
    if(Build.VERSION.SDK_INT >= Build.VERSION_CODES.TIRAMISU){
            if(ContextCompat.checkSelfPermission(this, Manifest.permission.POST_NOTIFICATIONS) != PackageManager.PERMISSION_GRANTED){
                ActivityCompat.requestPermissions(this, new String[]{Manifest.permission.POST_NOTIFICATIONS}, REQUEST_NOTIFICATION_PERMISSION);
            }
        }
        if (Build.VERSION.SDK_INT >= Build.VERSION_CODES.O) {
            NotificationChannel channel = new NotificationChannel("flood_alert_channel", "Flood Alerts", NotificationManager.IMPORTANCE_DEFAULT);
            channel.setDescription("Channel for flood notification");

            NotificationManager notificationManager = getSystemService(NotificationManager.class);
            notificationManager.createNotificationChannel(channel);
        }
    btnMenu.setOnClickListener(v -> {
        if (!isMenuOpen) {
            sideMenu.animate().translationX(0).setDuration(300);
            isMenuOpen = true;
        } else {
            sideMenu.animate().translationX(-sideMenu.getWidth()).setDuration(300);
            isMenuOpen = false;
        }
    });
    findViewById(R.id.tvNews).setOnClickListener(v ->
        Toast.makeText(this, "opening News", Toast.LENGTH_SHORT).show()
    );
    findViewById(R.id.tvPrecautions).setOnClickListener(v ->
        Toast.makeText(this, "Showing Safety Precautions", Toast.LENGTH_SHORT).show()
    );
    ImageView btnBack = findViewById(R.id.btnBack);
    btnBack.setOnClickListener(v -> {
        Intent intent = new Intent(this, MainActivity.class);
        startActivity(intent);
    });
    TextView tvNews = findViewById(R.id.tvNews);
    tvNews.setOnClickListener(v -> {
        Intent intent = new Intent(MainActivity.this, NewsAct.class);
        startActivity(intent);
    });
    TextView tvPrecautions = findViewById(R.id.tvPrecautions);
    tvPrecautions.setOnClickListener(v -> {
        Intent intent = new Intent(MainActivity.this, PREACAUTIONACT.class);
        startActivity(intent);
    });
    TextView tvEmergency = findViewById(R.id.tvEvacuation);
    tvEmergency.setOnClickListener(v -> {
        Intent intent = new Intent(MainActivity.this, Evacuation.class);
        startActivity(intent);
    });
    TextView tvHotLines = findViewById(R.id.tvHotlines);
    tvHotLines.setOnClickListener(v -> {
        Intent intent = new Intent(MainActivity.this, HotLines.class);
        startActivity(intent);
    });
        LinearLayout btnWhistle = findViewById(R.id.btnWhistle);
        btnWhistle.setOnClickListener(v -> {
            Intent intent = new Intent(MainActivity.this, SOSDURING.class);
            startActivity(intent);
        });
        LinearLayout btnChecklist = findViewById(R.id.btnChecklist);
        btnChecklist.setOnClickListener(v -> {
            Intent intent = new Intent(MainActivity.this, BEFORELIST.class);
            startActivity(intent);
        });
        LinearLayout btnCleaup = findViewById(R.id.btnCleanup);
        btnCleaup.setOnClickListener(v -> {
            Intent intent = new Intent(MainActivity.this, CLEANUP.class);
            startActivity(intent);
        });


}
    private void showFloodNotification(String title, String message, int iconColor) {

        Intent intent = new Intent (this, MainActivity.class);
        intent.setFlags(Intent.FLAG_ACTIVITY_NEW_TASK | Intent.FLAG_ACTIVITY_CLEAR_TASK);

        PendingIntent pendingIntent = PendingIntent.getActivity(this, 0, intent, PendingIntent.FLAG_UPDATE_CURRENT | PendingIntent.FLAG_IMMUTABLE);

        NotificationCompat.Builder builder = new NotificationCompat.Builder(this, "flood_alert_channel")
                .setSmallIcon(R.mipmap.ic_launcher)
                .setContentTitle(title.toUpperCase())
                .setContentText(message.toUpperCase())
                .setPriority(NotificationCompat.PRIORITY_DEFAULT)
                .setColor(iconColor)
                .setContentIntent(pendingIntent)
                .setAutoCancel(true);
        NotificationManagerCompat notificationManager = NotificationManagerCompat.from(this);

        if(Build.VERSION.SDK_INT < Build.VERSION_CODES.TIRAMISU || ContextCompat.checkSelfPermission(this, Manifest.permission.POST_NOTIFICATIONS) == PackageManager.PERMISSION_GRANTED){
            notificationManager.notify(1, builder.build());
        }
    }
    public void onRequestPermissionsResult(int requestCode, @NonNull String[] permissions, @NonNull int[] grantResults){
        super.onRequestPermissionsResult(requestCode, permissions, grantResults);

        if(requestCode == REQUEST_NOTIFICATION_PERMISSION){
            if(grantResults.length > 0 && grantResults[0] == PackageManager.PERMISSION_GRANTED){
                Toast.makeText(this, "Notification permission granted", Toast.LENGTH_SHORT).show();
            }else {
                Toast.makeText(this, "Notification permission denied.", Toast.LENGTH_SHORT).show();
            }
        }
    }
}



